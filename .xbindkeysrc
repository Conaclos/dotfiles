
# Master volume
# -------------

"amixer set Master 3%+"
    XF86AudioRaiseVolume
"amixer set Master 3%-"
    XF86AudioLowerVolume
"amixer set Master 0%"
    XF86AudioMute


# Music player
# ------------

"mocp --stop"
    XF86AudioStop
"mocp --previous"
    XF86AudioPrev
"mocp --next"
    XF86AudioNext
"mocp --toggle-pause"
    XF86AudioPlay


# Quick launch
# ------------

"$BROWSER"
    XF86Launch1
"import /tmp/screen.png"
    XF86WebCam


# Device
# ------

# Touchpad
"synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ {print ($3+1)%2}')"
    XF86TouchpadToggle

