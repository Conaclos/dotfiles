    min_width = "ðŸ”‰ 100%"
    align = "left"
        # Align speacker char
    format = "ðŸ”‰ %volume"
    format_muted = "ðŸ”‡ %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

