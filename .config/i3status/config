# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = true
    interval = 5
}

order += "volume master"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "cpu_usage"
order += "tztime local"

volume master {
    format = "ï€¨ %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless _first_ {
    format_up = "%quality at %essid - %ip"
    format_down = ""
}

ethernet _first_ {
    format_up = "%ip"
    format_down = ""
}

battery 0 {
    format = "ï‰ƒ %percentage %status"
}

